{
  "name": "puffscoinjs-util",
  "version": "6.1.0",
  "description": "a collection of utility functions for PUFFScoin",
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "puffscoinjs-config-build",
    "prepublishOnly": "npm run test && npm run build",
    "coverage": "npm run build && istanbul cover _mocha",
    "coveralls": "npm run coverage && coveralls <coverage/lcov.info",
    "docs:build": "typedoc --out docs --mode file --readme none --theme markdown --mdEngine github --gitRevision master --excludeNotExported src",
    "format": "puffscoinjs-config-format",
    "format:fix": "puffscoinjs-config-format-fix",
    "lint": "puffscoinjs-config-lint",
    "lint:fix": "puffscoinjs-config-lint-fix",
    "test": "npm run lint && npm run test:node && npm run test:browser",
    "test:browser": "npm run build && karma start karma.conf.js",
    "test:node": "npm run build && istanbul test mocha -- --reporter spec",
    "tsc": "puffscoinjs-config-tsc",
    "tslint": "puffscoinjs-config-tslint",
    "tslint:fix": "puffscoinjs-config-tslint-fix"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/puffscoin/puffscoinjs-util.git"
  },
  "keywords": [
    "puffscoin",
    "utilties"
  ],
